        </ToolBarContent>
        <HeaderContent>
            <MudTh>Descriptions</MudTh>
            <MudTh>Options</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Description">@context.Description</MudTd>
            <MudTd>

                <a class="btn btn-primary btn-sm" href="/ingredients/update/@context.Id"><span class="oi oi-pencil" aria-hidden="true"></span></a>
