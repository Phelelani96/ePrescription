@page "/ingredients" 

@using ePrescription.Controllers
@using ePrescription.Pages.Shared

@inject IngredientsController _service
@inject IDialogService DialogService
@inject ISnackbar _snackbar

<h3>Ingredients List</h3>
@if (ingredients == null)
{
    <p>Loading . . .</p>
}
else
{
